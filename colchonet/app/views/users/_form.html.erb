<% if @user.errors.any? %>
	<div id="error_explanation">
		<h4><%= t 'general.form_errror' %></h4>
	</div>
<% end %>


<%= form_for @user do |f| %>
	<p>
		<%= f.label :full_name %>
		<%= f.text_field :full_name %>
		<%= error_tag @user, :full_name %>
	</p>
	<p>
		<%= f.label :location %>
		<%= f.text_field :location %>
		<%= error_tag @user, :location %>
	</p>
	<p>
		<%= f.label :email %>
		<%= f.text_field :email %>
		<%= error_tag @user, :email %>
	</p>
	<p>
		<%= f.label :password %>
		<%= f.password_field :password %>
		<%= error_tag @user, :password %>
	</p>
	<p>
		<%= f.label :password_confimation %>
		<%= f.password_field :password_confirmation %>
		<%= error_tag @user, :password_confirmation %>
	</p>
	<p>
		<%= f.label :bio %>
		<%= f.text_area :bio %>
		<% if @user.errors.key? :bio %>
			<div class="error_message">
				<%= @user.errors[:bio].first %>
			</div>
		<% end %>
	</p>
	<p>
		<%= f.submit  %>
	</p>
<% end %>