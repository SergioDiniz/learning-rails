<% if @user.errors.any? %>
	<div id="error_explanation">
		<h4>Não foi possível completar a ação, pois os seguintes erros ocorreram</h4>

		<ul>
		    <% @user.errors.full_messages.each do |message| %>
				<li><%= message %></li>
		    <% end %>
		</ul>

	</div>
<% end %>


<%= form_for @user do |f| %>
	<p>
		<%= f.label :full_name %> <br/>
		<%= f.text_field :full_name %>
	</p>
	<p>
		<%= f.label :location %> <br/>
		<%= f.text_field :location %> <br/>
	</p>
	<p>
		<%= f.label :email %> <br/>
		<%= f.text_field :email %> <br/>
	</p>
	<p>
		<%= f.label :password %> <br/>
		<%= f.password_field :password %> <br/>
	</p>
	<p>
		<%= f.label :password_confimation %> <br/>
		<%= f.password_field :password_confirmation %> <br/>
	</p>
	<p>
		<%= f.label :bio %> <br/>
		<%= f.text_area :bio %> <br/>
	</p>
	<p>
		<%= f.submit  %>
	</p>
<% end %>